algoritmo "ParImparZero"
var
   n1: real
inicio

      escreva("um numero: ")
      leia(n1)
      se (n1 > 0) entao
      escreval("O numero é maior que zero")
      fimse
      se (n1=0) entao
      escreval("O numero é igual a zero")
      fimse
      se (n1<0) entao
      escreval("O numero é menor que zero")
      fimse

fimalgoritmo